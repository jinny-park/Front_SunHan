<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:padding="8dp">


    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="start"
        android:rotation="-90"
        app:srcCompat="@drawable/arrow_right_down" />



    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/commnity_round_popup"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cuserProfile"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_margin="1dp"
                android:layout_gravity="center"
                tools:srcCompat="@drawable/profile" />

            <TextView
                android:id="@+id/cuserId"
                android:layout_width="252dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:clickable="false"
                android:text="익명"
                android:textColor="#000000"
                android:textSize="12dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/cMore"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/more" />

        </LinearLayout>

        <TextView
            android:id="@+id/ccontent"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="왕 저도 가봐야겠어요"
            android:textColor="#000000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/cuploadTime"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:text="03/17 12:10"
            android:textColor="#7A7A7A"
            android:textSize="10dp" />
    </LinearLayout>
</LinearLayout>