<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/loginLogo"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sunhan_logo" />


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#BCBCBC"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="99dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="410dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="129dp">

        <TextView
            android:id="@+id/hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:text="안녕하세요, "
            android:textColor="@color/black"
            android:textSize="22sp"
            tools:layout_editor_absoluteX="108dp"
            tools:layout_editor_absoluteY="136dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="홍길동"
            android:textColor="#003388"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/nim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="님!"
            android:textColor="@color/black"
            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="410dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="338dp">

        <TextView
            android:id="@+id/money01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:text="잔액: "
            android:textColor="@color/black"
            android:textSize="22sp"
            tools:layout_editor_absoluteX="108dp"
            tools:layout_editor_absoluteY="136dp" />

        <TextView
            android:id="@+id/money02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="25,500"
            android:textColor="#003388"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/money03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="원"
            android:textColor="@color/black"
            android:textSize="22sp" />

    </LinearLayout>

    <Button
        android:id="@+id/sunhan_store"
        android:layout_width="280dp"
        android:layout_height="64dp"
        android:background="@drawable/round_corner_medium"
        android:backgroundTint="#FDDB33"
        android:text="선한 영향력 가게"
        android:textColorHint="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="410dp" />

    <Button
        android:id="@+id/card_store"
        android:layout_width="280dp"
        android:layout_height="64dp"
        android:background="@drawable/round_corner_medium"
        android:backgroundTint="#FDDB33"
        android:text="아동급식카드 가맹점"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="500dp" />

    <Button
        android:id="@+id/community"
        android:layout_width="280dp"
        android:layout_height="64dp"
        android:background="@drawable/round_corner_medium"
        android:backgroundTint="#FDDB33"
        android:text="커뮤니티"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="590dp" />

    <HorizontalScrollView
        android:id="@+id/horScrollView"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="220dp"
                android:layout_height="170dp"
                android:layout_marginLeft="100dp"
                android:gravity="center"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/credit_card" />

            <TextView
                android:layout_width="170dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/round_corner_medium"
                android:backgroundTint="#CFCFCF"
                android:text="+"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="45dp" />


        </LinearLayout>



    </HorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>