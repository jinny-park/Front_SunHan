<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/loginLogo"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sunhan_logo" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#BCBCBC"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="100dp" />


    <TextView
        android:id="@+id/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인 후 이용 가능합니다. "
        android:textColor="@color/black"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="137dp" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="410dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="338dp">

        <TextView
            android:id="@+id/money01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:text="잔액: "
            android:textColor="@color/black"
            android:textSize="22sp"
            tools:layout_editor_absoluteX="108dp"
            tools:layout_editor_absoluteY="136dp" />

        <TextView
            android:id="@+id/money02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="-"
            android:textColor="#003388"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/money03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="원"
            android:textColor="@color/black"
            android:textSize="22sp" />

    </LinearLayout>

    <Button
        android:id="@+id/sunhan_store"
        android:layout_width="280dp"
        android:layout_height="64dp"
        android:background="@drawable/round_corner_medium"
        android:backgroundTint="#FDDB33"
        android:text="선한 영향력 가게"
        android:textColorHint="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="410dp" />

    <Button
        android:id="@+id/card_store"
        android:layout_width="280dp"
        android:layout_height="64dp"
        android:background="@drawable/round_corner_medium"
        android:backgroundTint="#FDDB33"
        android:text="아동급식카드 가맹점"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="500dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="280dp"
        android:layout_height="64dp"
        android:background="@drawable/round_corner_medium"
        android:backgroundTint="#FDDB33"
        android:text="커뮤니티"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="590dp" />


    <TextView
        android:layout_width="170dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:background="@drawable/round_corner_medium"
        android:backgroundTint="#CFCFCF"
        android:text="+"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="45dp"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="197dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>