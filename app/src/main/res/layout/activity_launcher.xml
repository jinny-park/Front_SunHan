<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBE341"
    android:id="@+id/launch"
    tools:context=".View.activity.LauncherActivity">

    <ImageView
        android:id="@+id/launcherLogo"
        android:layout_width="214dp"
        android:layout_height="155dp"
        android:layout_marginTop="164dp"
        android:src="@drawable/sunhan_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/launcherText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="SUNHAN"
        android:textColor="#335A88"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/launcherLogo"
        app:layout_constraintStart_toStartOf="@+id/launcherLogo"
        app:layout_constraintTop_toBottomOf="@+id/launcherLogo" />
</androidx.constraintlayout.widget.ConstraintLayout>